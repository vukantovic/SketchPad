<Window x:Class="SketchPad.WindowSave"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SketchPad"
        mc:Ignorable="d"
        Title="WindowSave" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="620*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="txtFile" HorizontalAlignment="Left" Height="55" Margin="45,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="682" Grid.ColumnSpan="2"/>
        <Label HorizontalAlignment="Left" Margin="45,43,0,0" VerticalAlignment="Top">
            <Label Content="Where do you want to save this file?"/>
        </Label>
        <Label Content="Name of your sketch:" HorizontalAlignment="Left" Margin="45,161,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="93" Margin="45,192,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="682" Grid.ColumnSpan="2"/>
        <Button IsDefault="false" x:Name="btnSave" Content="Save"  HorizontalAlignment="Left" Margin="45,306,0,0" VerticalAlignment="Top" Width="682" Height="73" Grid.ColumnSpan="2" Click="btnSave_Click"/>

    </Grid>
</Window>
